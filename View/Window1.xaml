<Window x:Class="clientcheck.View.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientcheck.View"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Window1" Height="600" Width="800" 
        WindowStyle="None">
    <Border 
   
            Background="#F4F8FB"
            BorderBrush="#10213C"
            BorderThickness="5"
            >


        <Grid>
            <Grid.RowDefinitions>
                <!-- 첫 번째 행 (높이 30) -->
                <RowDefinition Height="30"/>
                <RowDefinition Height="36*"/>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="63*"/>
                <RowDefinition Height="153*"/>
                <RowDefinition Height="20"/>
                <!-- 두 번째 행 -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="177*"/>
                <ColumnDefinition Width="173*"/>
                <ColumnDefinition Width="115*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="62*"/>
                <ColumnDefinition Width="105*"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>
            <!--타이틀바-->

            <Grid Grid.Row="0" Grid.Column="0">
                <Grid x:Name="titlebar1" Background="#10213C" MouseDown="titlebar1_MouseDown" ></Grid>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,2,0">
                <Grid x:Name="titlebar2" Background="#10213C" MouseDown="titlebar_MouseDown" Margin="0,0,-15,0"></Grid>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="6">
                <Grid  x:Name="titlebar3" Background="#10213C" MouseDown="titlebar3_MouseDown"></Grid>

            </Grid>
            <Grid Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="4">
                <Grid Background="#10213C" MouseDown="Grid_MouseDown"></Grid>

            </Grid>
            <Grid Grid.Row="0" Grid.Column="8">
                <Grid Background="#10213C"></Grid>
                <Label x:Name="minimize" Content="-" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="#D7E4F2" FontSize="16" MouseDown="minimize_MouseDown" Foreground="#FFD7E4F2"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="9">
                <Grid.RowDefinitions>
                    <RowDefinition Height="13*"/>
                    <RowDefinition Height="17*"/>
                </Grid.RowDefinitions>
                <Grid Background="#10213C" Grid.RowSpan="2"></Grid>
                <Label x:Name="maximize" Content="ㅁ" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="16" MouseDown="maximize_MouseDown" Foreground="#FFD7E4F2" Grid.RowSpan="2"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="10">
                <Grid Background="#10213C"></Grid>
                <Label x:Name="exit" Content="X" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" MouseDown="exit_MouseDown" Foreground="#FFD7E4F2"/>
            </Grid>
            <!--타이틀바 끝-->

            <!--이미지박스 디자인-->
            <DockPanel Grid.Row="1" Grid.Column="4" Grid.RowSpan="5" Grid.ColumnSpan="4">
                <Border CornerRadius="50" BorderThickness="10" Margin="5,5,5,5"  Background="White">
                    <Image x:Name="faceimage" Source="/Resources/cool.jpg" Margin="15,0,15,0"  >
                    </Image>

                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                            <GradientStop Color="RoyalBlue" Offset="0" />
                            <GradientStop Color="{DynamicResource {x:Static SystemColors.InactiveCaptionTextColorKey}}" Offset="0.85" />

                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>

            </DockPanel>

            <DataGrid Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="3" Margin="0,0,4,0" Grid.RowSpan="3"/>
            <Button x:Name="추가" Content="회원추가" Grid.Column="5" Grid.Row="6" FontWeight="Bold" Foreground="#6E6E6E" Background="white" BorderBrush="#FF5EC3F5" Margin="1,0,1,0" Grid.ColumnSpan="2"  />
            <Button x:Name="삭제" Grid.Column="7" Grid.Row="6" FontWeight="Bold" Content="회원 삭제" Foreground="#6E6E6E" Background="white" BorderBrush="#F199BC" Margin="1,0,1,0"/>
            <Label  Grid.Column="5" HorizontalAlignment="Center" Grid.Row="7" VerticalAlignment="Top" Background="White" Content="이름" Height="26" Margin="0,54,0,0" Width="34"/>
            <Label Content="나이" Grid.Column="5" HorizontalAlignment="Center" Grid.Row="8" VerticalAlignment="Center" Background="White" Height="25" Width="34" />
            <!-- 이하 그리드 내용 -->
        </Grid>






    </Border>

</Window>
