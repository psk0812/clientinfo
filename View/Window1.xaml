<Window x:Class="clientcheck.View.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientcheck.View" xmlns:local1="clr-namespace:clientcheck.ViewModel"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Window1" Height="600" Width="800" 
        WindowStyle="None">
    <Window.DataContext>
        <local1:Viewmodel />
    </Window.DataContext>
    <Border 
   
            Background="#F3F2F3"
            BorderBrush="#10213C"
            BorderThickness="5"
            >


        <Grid>
            <Grid.RowDefinitions>
                <!-- 첫 번째 행 (높이 30) -->
                <RowDefinition Height="30"/>
                <RowDefinition Height="87*"/>
                <RowDefinition Height="19"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="38"/>
                <RowDefinition Height="38*"/>
                <RowDefinition Height="341*"/>
                <RowDefinition Height="10*"/>
                <!-- 두 번째 행 -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="106*"/>
                <ColumnDefinition Width="368*"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="155"/>

                <ColumnDefinition Width="29.878"/>
                <ColumnDefinition Width="31.122"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>
            <!--타이틀바-->

            <Grid Grid.Row="0" Grid.Column="0"  Background="#10213C" Grid.ColumnSpan="4" MouseDown="Grid_MouseDown_1"/>
            <Grid Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Margin="0,0,26,0">
                <Grid Background="#10213C"></Grid>
                <Label x:Name="minimize" Content="-" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="#D7E4F2" FontSize="16" MouseDown="minimize_MouseDown" Foreground="#FFD7E4F2"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="17"/>
                </Grid.RowDefinitions>
                <Grid Background="#10213C" Grid.RowSpan="2"></Grid>
                <Label x:Name="maximize" Content="ㅁ" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="16" MouseDown="maximize_MouseDown" Foreground="#FFD7E4F2" Grid.RowSpan="2"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="6">
                <Grid Background="#10213C"></Grid>
                <Label x:Name="exit" Content="X" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" MouseDown="exit_MouseDown" Foreground="#FFD7E4F2"/>
            </Grid>
            <Label Content="Members" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="36" FontFamily="Calisto MT" Width="155" Height="52" Grid.Column="1"/>
            <Grid Grid.ColumnSpan="4"/>
            <Grid Grid.ColumnSpan="4"/>

            <Button x:Name="btn_add" Content="+ Add Member" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Top"  Grid.Row="1" Height="40"  Width="155"   Background="#FF684EDF" FontWeight="Bold" FontSize="18" Foreground="White" FontFamily="Bahnschrift SemiLight" BorderBrush="#FF684EDF" Click="btn_add_Click_1" Margin="0,47,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Label Content="68 Members" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="3" VerticalAlignment="Bottom" Width="155" FontWeight="Bold" FontFamily="Bahnschrift SemiLight" FontSize="16" Height="29"/>
            <Label Content="Filter by" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3"  FontWeight="Bold" FontFamily="Bahnschrift SemiLight" FontSize="14" Height="26" Width="62"/>

            <TextBox x:Name="namebox" Text="Name" Grid.Row="3"  Grid.Column="3" HorizontalAlignment="Center" Margin="0,5,0,5" Width="155" Background="White" Foreground="#FFCDD5DD" GotFocus="namebox_GotFocus" />
            <TextBox x:Name="agebox" Text="Age" Grid.Row="4"  Grid.Column="3" HorizontalAlignment="Center" Margin="0,5,0,5" Width="155" Background="White" Foreground="#FFCDD5DD" GotFocus="agebox_GotFocus" />


            <Button Content="조회" Grid.Column="4" HorizontalAlignment="Center" Grid.Row="4"  Grid.ColumnSpan="2"  VerticalAlignment="Top" Width="51" Background="#FFBBAAFF" Foreground="White" FontSize="10" FontWeight="Bold" Height="24" Margin="0,10,0,0" BorderBrush="#FFBBAAFF" MouseDown="Button_MouseDown" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="삭제" Grid.Column="4" HorizontalAlignment="Center" Grid.Row="5"  Grid.ColumnSpan="2"  VerticalAlignment="Top" Width="51" Background="#FFFFAAAA" Foreground="White" FontSize="10" FontWeight="Bold" Height="24" Margin="0,10,0,0" BorderBrush="#FFFFAAAA" MouseDown="Button_MouseDown" >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                </Button.Resources>
            </Button>

            <DataGrid Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3"  Margin="0,10,0,0" SelectionChanged="DataGrid_SelectionChanged"  ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto" BorderBrush="Transparent" BorderThickness="0" 
            AutoGenerateColumns ="False"  GridLinesVisibility="None" RowHeaderWidth="0" Background="#F3F2F3" 
            CanUserAddRows="False" ItemsSource="{Binding ClientLists}" FontSize="22" Grid.RowSpan="2">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <!-- 행의 테두리 색상을 지정합니다 -->
                        <Setter Property="BorderBrush" Value="#F3F2F3"/>
                        <Setter Property="BorderThickness" Value="0,0,0,4"/>
                        <!-- Bottom Border만 적용 -->
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>

                    <DataGridCheckBoxColumn CanUserResize="False" Width="auto" >
                        <DataGridCheckBoxColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F3F2F3" />
                            </Style>
                        </DataGridCheckBoxColumn.HeaderStyle>
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <!-- 체크박스 스타일 지정 -->
                                <Setter Property="Background" Value="White" />
                                <Setter Property="BorderBrush" Value="#F3F2F3" />
                                <Setter Property="BorderThickness" Value="2" />
                                <Setter Property="Padding" Value="5" />
                                <!-- 체크박스 확대 -->
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="2" ScaleY="2" />
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>
                    
                    
                    <DataGridTextColumn Header="" IsReadOnly="True"  Width="20">
                        <!--체크박스와 공간을 만들어 주기 위한 행-->
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F3F2F3" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Name" IsReadOnly="True" Binding="{Binding Name}" Width="100*">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F3F2F3" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="50">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F3F2F3" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Phonenumb" Binding="{Binding Phonenumb}" Width="200*">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F3F2F3" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>


                </DataGrid.Columns>
            </DataGrid>








            <!--타이틀바 끝-->

            <!--이미지박스 디자인-->


            <!-- 이하 그리드 내용 -->
        </Grid>






    </Border>

</Window>
