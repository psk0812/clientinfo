<Window x:Class="clientcheck.View.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientcheck.View"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Window1" Height="600" Width="800" 
        WindowStyle="None">
    <Border 
   
            Background="#F4F8FB"
            BorderThickness="5"
            >

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,1"  EndPoint="1,0">
                <GradientStop Color="#6F45E8" Offset="0"/>
                <GradientStop Color="#99B2EE" Offset="0.85"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.RowDefinitions>
                <!-- 첫 번째 행 (높이 30) -->
                <RowDefinition Height="30"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="162*"/>
                <RowDefinition Height="20"/>
                <!-- 두 번째 행 -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="86*"/>
                <ColumnDefinition Width="79*"/>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>



            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid x:Name="titlebar1" Background="#6F45E8" MouseDown="titlebar1_MouseDown" ></Grid>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,225,0" Grid.ColumnSpan="2">
                <Grid x:Name="titlebar2" Background="#6F45E8" MouseDown="titlebar_MouseDown"></Grid>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">
                <Grid  x:Name="titlebar3" Background="#6F45E8" MouseDown="titlebar3_MouseDown"></Grid>

            </Grid>
            <Grid Grid.Row="0" Grid.Column="3">
                <Grid Background="#6F45E8" MouseDown="Grid_MouseDown"></Grid>

            </Grid>
            <Grid Grid.Row="0" Grid.Column="4">
                <Grid Background="#6F45E8"></Grid>
                <Label x:Name="minimize" Content="-" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="16" MouseDown="minimize_MouseDown"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="5">
                <Grid Background="#6F45E8"></Grid>
                <Label x:Name="maximize" Content="+" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="16" MouseDown="maximize_MouseDown"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="6">
                <Grid Background="#6F45E8"></Grid>
                <Label x:Name="exit" Content="X" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="16" MouseDown="exit_MouseDown"/>
            </Grid>
            <DockPanel Grid.Row="1" Grid.Column="3" Grid.RowSpan="3">
                <Border CornerRadius="50" BorderThickness="10" Margin="5,5,5,5"  Background="White">
                    <Image x:Name="faceimage" Source="/Resources/cool.jpg" Margin="10,0,10,0"  >
                    </Image>

                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                            <GradientStop Color="RoyalBlue" Offset="0" />
                            <GradientStop Color="HotPink" Offset="0.85" />

                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>

            </DockPanel>
            <DataGrid Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" Margin="0,0,0,0"/>
            <!-- 이하 그리드 내용 -->
        </Grid>






    </Border>

</Window>
